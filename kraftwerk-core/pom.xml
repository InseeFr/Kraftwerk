<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.insee.kraftwerk</groupId>
		<artifactId>kraftwerk</artifactId>
		<version>3.9.2</version>
	</parent>

	<artifactId>kraftwerk-core</artifactId>
	<packaging>jar</packaging>
	<name>kraftwerk-core</name>

	<properties>
		<trevas.version>1.11.0</trevas.version>
		<duckdb.version>1.4.1.0</duckdb.version>
		<bpm.version>1.0.18</bpm.version>
	</properties>


	<dependencies>

		<!-- XML libraries -->
		<!-- XML-XSLT with Saxon -->
		<dependency>
			<groupId>net.sf.saxon</groupId>
			<artifactId>Saxon-HE</artifactId>
			<version>12.9</version>
		</dependency>
		<!-- XML oriented test dependency -->
		<!-- https://www.xmlunit.org/ -->
		<dependency>
			<groupId>org.xmlunit</groupId>
			<artifactId>xmlunit-assertj3</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- XOM -->
		<!-- http://www.xom.nu/ -->
		<dependency>
			<groupId>xom</groupId>
			<artifactId>xom</artifactId>
			<version>1.3.9</version>
			<exclusions>
				<exclusion>
					<groupId>xml-apis</groupId>
					<artifactId>xml-apis</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<!-- TODO: maybe replace XOM (see:
		https://www.baeldung.com/java-xml-libraries) -->

		<!-- JSON libraries -->
		<!-- json-simple -->
		<!--
		https://mvnrepository.com/artifact/com.googlecode.json-simple/json-simple -->
		<dependency>
			<groupId>com.googlecode.json-simple</groupId>
			<artifactId>json-simple</artifactId>
			<version>1.1.1</version>
		</dependency>
		<!-- jackson -->
		<!-- (imported with Trevas) -->

		<!-- CSV -->
		<!-- OpenCSV -->
		<!--
		https://www.geeksforgeeks.org/writing-a-csv-file-in-java-using-opencsv/ -->
		<dependency>
			<groupId>com.opencsv</groupId>
			<artifactId>opencsv</artifactId>
			<version>5.12.0</version>
		</dependency>

		<!-- VTL 2 with Trevas -->
		<!-- https://mvnrepository.com/artifact/fr.insee.trevas/vtl-engine -->
		<dependency>
			<groupId>fr.insee.trevas</groupId>
			<artifactId>vtl-engine</artifactId>
			<version>${trevas.version}</version>
		</dependency>
		<!-- https://mvnrepository.com/artifact/fr.insee.trevas/vtl-jackson -->
		<dependency>
			<groupId>fr.insee.trevas</groupId>
			<artifactId>vtl-jackson</artifactId>
			<version>${trevas.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-compress</artifactId>
			<version>1.28.0</version>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-collections4</artifactId>
			<version>4.5.0</version>
		</dependency>

		<!-- S3 -->
		<dependency>
			<groupId>io.minio</groupId>
			<artifactId>minio</artifactId>
			<version>8.6.0</version>
		</dependency>
		<dependency> <!-- 5.x.x breaks minio so we override with 4.x.x -->
			<groupId>com.squareup.okhttp3</groupId>
			<artifactId>okhttp</artifactId>
			<version>4.12.0</version>
		</dependency>


		<!-- DUCKDB -->
		<dependency>
			<groupId>org.duckdb</groupId>
			<artifactId>duckdb_jdbc</artifactId>
			<version>${duckdb.version}</version>
		</dependency>

		<!-- Metadatas -->
		<dependency>
			<groupId>fr.insee.bpm</groupId>
			<artifactId>bpm</artifactId>
			<version>${bpm.version}</version>
		</dependency>


    </dependencies>



</project>
